<!DOCTYPE html>
<html>

<head>
  <%- include('../../partials/head'); %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>


  <div class="flex  bg-gray-50">
    <div class="fixed">

    </div>
    <div class="relative min-h-screen md:flex w-full" data-dev-hint="container">
      <%- include('../../partials/headerAdmin'); %>
        <main id="content" class="flex-1 p-6 lg:px-8">
          <div class=" mx-auto">
            <!-- Replace with your content -->
            <div class="px-4 py-6 sm:px-0">
              <div class=" h-96">





                <div class=" flex justify-center ">
          
                  <p class="text-3xl text-yellow-900 ">Latest Work  </p>
                  <div class="border-r-4 border-orange-500 w-2 h-16 p-2"></div>
                  <p class="text-3xl text-yellow-900 text-center  self-end pl-2">사바 </p>
       </div>    




       <div class="-m-2 text-center">

        <button type="button" data-bs-toggle="modal"
        data-bs-target="#exampleModal" class="mb-2 w-full inline-block px-6 py-2.5 bg-orange-600 my-4 text-white font-medium text-xs leading-normal uppercase rounded shadow-md hover:bg-orange-400 hover:shadow-lg focus:bg-orange-500 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-orange-800 active:shadow-lg transition duration-150 ease-in-out">Add work</button>

        <!-- <div class="p-2 mt-4">
          <div class=" w-full flex justify-between  bg-white leading-none text-orange-600 rounded-full p-2 shadow text-teal text-sm">
            
            <span class="inline-flex px-2 text-lg">if you have many jobs you can add it here</span>
            <span class="inline-flex bg-orange-600 text-white text-lg rounded-full h-6 px-3 justify-center items-center">
              <span href="#" data-bs-toggle="modal"
              data-bs-target="#exampleModal"><i class="fa fa-plus"></i> Add work  </span>
          
            </span>
          </div>
        </div> -->


                <div class="container my-12 mx-auto px-4 md:px-12">
                  
                  <div class="flex flex-wrap -mx-1 lg:-mx-4">

                    <!-- Column -->

                      <div class="grid grid-cols-3 gap-2 my-1 px-1  lg:my-4 lg:px-4 w-full">

                        <% for( let index=0; index < works.length; index++ ) { %>
                        <!-- Article -->
                        <article class="overflow-hidden rounded-lg shadow-lg">

                          <a href="#">
                            <img alt="Placeholder" class="block h-48 w-full object-cover" src="/images1/<%= works[index].image %>">
                          </a>

                          <header class="flex items-center justify-between leading-tight p-2 md:p-4">
                            <h1 class="text-lg">
                              <a class="no-underline hover:underline text-black" href="#">
                                <%= works[index].name %>
                              </a>
                            </h1>

                          </header>

                          <footer class="flex items-center justify-between leading-none p-2 md:p-4">
                            <div class="btn">
                              <a href="#" class="btn btn-success" data-bs-toggle="modal"
                                data-bs-target="#editModal<%=works[index]._id%>"><i class="fa fa-edit"></i> edit</a>
                              <a href="#" class="btn btn-danger confirm" data-bs-toggle="modal"
                                data-bs-target="#modalChoice<%=works[index]._id%>"> <i class="fa fa-close"></i> delete</a>
                            </div>
                          </footer>



                        </article>
                        <div class="modal fade mt-0" tabindex="-1" role="dialog" id="modalChoice<%=works[index]._id%>">
                          <div class="modal-dialog" role="document" style="margin-top: 15%;">
                              <div class="modal-content rounded-4 shadow m-50">
                                  <div class="modal-body p-4 text-dark text-center">
                                    <svg class="mx-auto mb-4 w-14 h-14 text-gray-400 dark:text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                    <h3 class="mb-5 text-lg font-normal text-gray-500 dark:text-gray-400">Are you sure you want to delete this product?</h3>
                                   
                                  </div>
                                  <div class="p-6 pt-0 text-center">
                                     
                                          <a href="/works/delete/<%=works[index]._id%>" class="text-white bg-red-600 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center mr-2"> <i
                                              class="fa fa-close"></i> yes</a>
                                      <button type="button"
                                          class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:ring-gray-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600"
                                          data-bs-dismiss="modal">No</button>
                                  </div>
                              </div>
                          </div>
                      </div>
                   
                        <!-- Model Edit-->
                        <div class="modal fade" id="editModal<%=works[index]._id%>" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog " style="direction: rtl;">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                  <h5 class="modal-title text-center" id="staticBackdropLabel" style="width: 100%;">edit </h5>
              
                                </div>
                                <div class="container">
                                  <form action="/update/works" method="post" enctype="multipart/form-data">
                                    <input type="text" class="hidden" name="id" value="<%=works[index]._id%>">
                                    <div class="row g-3">
                                      <div class="col-12">
                                          <label for="username" class="form-label">Work Name</label>
                                          <div class="input-group has-validation">
                
                                            <input type="text" class="form-control" name="name" value="<%=works[index].name%>" id="corsname"  required="">
                                            <div class="invalid-feedback">
                                            work name
                                            </div>
                                          </div>
                                        </div>
              
                                      <div class="col-12">
                                        <label for="username" class="form-label">image </label>
                                        <div class="input-group has-validation">
              
                                          <input type="file" class="form-control" name="image" id="corsname"  value="/images1/<%=works[index].image%>" placeholder="  lfjv ">
                                          <div class="invalid-feedback">
                                       image
                                          </div>
                                        </div>
                                      </div>
              
                                      <div class="col-12">
                                        <label for="email" class="form-label"> description </label>
                                        <input type="text" class="form-control" id="descr" name="descr" value="<%=works[index].descr%>" placeholder="description ">
                                        <div class="invalid-feedback">
                                        descripe
                                        </div>
                                      </div>
              
                                      <div class="modal-footer">
                                        <button type="submit " class="bg-green-400">edit</button>
                                      </div>
                                    </div>
                                  </form>
              
                                </div>
                              </div>
                            </div>
              
                          
                          </div><% } %>

                        <!-- END Column -->


                      </div>
                  </div>

















               
                  

                </div>

                <!-- Model Add -->
                <div class="ltr modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                  aria-hidden="true">
                  <div class="modal-dialog" >
                    <div class="modal-content">
                      <div class="modal-header text-left" col-12>
                        <h5 class="modal-title text-left" id="exampleModalLabel" style="width: 100%;;">Add work                        </h5>

                      </div>
                      <div class="container">
                        <form action="/works/add" method="post" enctype="multipart/form-data">
                          <div class="row g-3">


                            <div class="col-12">
                              <label for="username" class="form-label">Work Name </label>
                              <div class="input-group has-validation">
                                <!-- <div class="mb-3 pt-0">
                                  <input type="text" name="name" id="corsname" placeholder=" work" class="px-3 py-3 placeholder-blueGray-300 text-blueGray-600 relative bg-white bg-white rounded text-sm border-0 shadow outline-none focus:outline-none focus:ring w-full"/>
                                </div> -->
                                <input type="text" class="" name="name" id="corsname" placeholder=" work"
                                  required="">
                                <div class="invalid-feedback">
                                 work name
                                </div>
                              </div>
                            </div>

                            <div class="col-12">
                              <label for="file" class="form-label"> Image </label>
                              <input type="file" class="form-control" name="image" id="file" placeholder="image">
                              <div class="invalid-feedback">
                           please add image
                              </div>
                            </div>

                            <div class="col-12">
                              <label for="descr" class="form-label"> Note </label>
                              <input type="text" class="form-control" name="descr" id="descr" placeholder="notes">
                              <div class="invalid-feedback">
                             please add notes     </div>
                            </div>





                            <div class="modal-footer">
                              <button type="submit" class="bg-orange-500 rounded py-2 px-4 text-white ">Add</button>
                            </div>
                          </div>
                        </form>
                      </div>
                    </div>



                  </div>
                </div>
                <!-- Model Edit-->



              </div>
              <!-- /End replace -->
            </div>
        </main>

    </div>


  </div>

  <!-- End Qualification Page -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/javascripts/app.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>

</body>

</html>